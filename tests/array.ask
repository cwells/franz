#
# test arrays and subscripts
#

print("Testing arrays and subscripts...")
errors = 0

a = []
try assert a == [] rescue errors++

a = [ 1, 2, 3 ]
try assert a == [ 1, 2, 3 ] rescue errors++

a = [ 1 to 5 ]
try assert a == [ 1, 2, 3, 4, 5 ] rescue errors++

a = [ 1 to 10 step 2 ]
try assert a == [ 1, 3, 5, 7, 9 ] rescue errors++

try assert a[0] == 1 rescue errors++
try assert a[-1] == 9 rescue errors++
try assert a[1] * a[2] == 15 rescue errors++

print(if errors "Some tests failed ({errors}) errors\n" else "passed!\n")
